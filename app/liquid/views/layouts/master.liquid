<div class="cover-photo">
  <div class="cover-photo__img">
    {% include 'photos' %}
  </div>

  <div class="cover-photo__overlay">
    <div class="cover-photo__shading"></div>

    <a href="/">
      <div class="header-logo header-logo--simple">
        <div class="header-logo__logo"></div>
        <div class="header-logo__tagline">Fighting for people over profits</div>
      </div>
    </a>

    <div class="cover-photo__titles">
      <div class="center-content">
        <div class="center-content__big-column">
          <h3 class="cover-photo__target typography__highlight--dark typography__highlight--simple">Ace Hardware &amp; True Value</h3>
          <div class="typography__highlight-wrapper">
            <h1 class="cover-photo__title typography__highlight">
              <span>{{ title }}</span>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="center-content">
  <div class="center-content__big-column">
    {% include 'thermometer' %}

    {{content}}
  </div>
  <div class="center-content__small-column">
    <div class="petition-bar petition-bar--elevated">
      {% include 'action' %}
    </div>
  </div>
</div>
